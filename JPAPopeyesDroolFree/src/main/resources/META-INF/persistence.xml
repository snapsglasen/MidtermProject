<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="InsideScoop">
	
	
	<provider>org.hibernate.jpa.HibernatePersistenceProvider
    </provider>

		
		<class>com.skilldistillery.interviewassister.entities.Attempt</class>
		<class>com.skilldistillery.interviewassister.entities.Category</class>
		<class>com.skilldistillery.interviewassister.entities.Comment</class>
		<class>com.skilldistillery.interviewassister.entities.CommentVote</class>
		<class>com.skilldistillery.interviewassister.entities.CommentVoteId</class>
		<class>com.skilldistillery.interviewassister.entities.Company</class>
		<class>com.skilldistillery.interviewassister.entities.Option</class>
		<class>com.skilldistillery.interviewassister.entities.Post</class>
		<class>com.skilldistillery.interviewassister.entities.PostVote</class>
		<class>com.skilldistillery.interviewassister.entities.PostVoteId</class>
		<class>com.skilldistillery.interviewassister.entities.Question</class>
		<class>com.skilldistillery.interviewassister.entities.QuestionVote</class>
		<class>com.skilldistillery.interviewassister.entities.QuestionVoteId</class>
		<class>com.skilldistillery.interviewassister.entities.Topic</class>
		<class>com.skilldistillery.interviewassister.entities.WorkRole</class>
		<class>com.skilldistillery.interviewassister.entities.User</class>
		<class>com.skilldistillery.interviewassister.entities.UserCategory</class>
	

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/insidescoop?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=US/Mountain" />
			<property name="javax.persistence.jdbc.user" value="scooper" />
			<property name="javax.persistence.jdbc.password"
				value="scoop" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />

			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />

			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.min_size" value="0" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.timeout" value="60" />
			
		</properties>
	</persistence-unit>
</persistence>
